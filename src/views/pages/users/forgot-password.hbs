{{> header}}
<div class="auth-container">
    <h2>Recuperar contraseña</h2>

    <p>Ingresá tu email y te enviaremos un enlace para restablecer tu contraseña.</p>

    <form method="POST" id="formForgotPass" action="/api/mailing/forgot-password">
        <div class="form-row">
            <label for="email">Correo electrónico</label>
            <input id="email" name="email" type="email" required placeholder="ej: usuario@gmail.com" />
        </div>

        <button class="btn primary" type="submit">Enviar enlace</button>
    </form>

    <a href="/users/login" class="back-link">Volver al login</a>
</div>
{{> footer}}


<style>
    /* Contenedor general centrado */
    .auth-container {
        max-width: 420px;
        margin: 60px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.06);
        animation: fadeIn 0.7s ease-out;
    }

    .auth-container h2 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #0d6efd;
        text-align: center;
    }

    .auth-container p {
        text-align: center;
        margin-bottom: 25px;
        color: #555;
        font-size: 0.95rem;
    }

    /* Inputs */
    .form-row {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .form-row label {
        font-size: 0.9rem;
        color: #333;
        font-weight: 500;
    }

    .form-row input {
        padding: 12px;
        border: 1px solid #d0d7e2;
        background: #fdfdfd;
        border-radius: 10px;
        font-size: 1rem;
        outline: none;
        transition: all 0.2s ease;
    }

    .form-row input:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 3px rgba(13,110,253,0.12);
    }

    /* Botones */
    .btn.primary,
    .auth-submit-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 10px;
        background: #0d6efd;
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.25s ease, transform 0.1s ease;
    }

    .btn.primary:hover,
    .auth-submit-btn:hover {
        background: #0b5ed7;
    }

    .btn.primary:active,
    .auth-submit-btn:active {
        transform: scale(0.98);
    }

    /* Link volver */
    .back-link {
        display: block;
        margin-top: 18px;
        text-align: center;
        color: #0d6efd;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .back-link:hover {
        color: #0b5ed7;
        text-decoration: underline;
    }

    /* Animación */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 480px) {
        .auth-container {
            padding: 20px;
            margin: 40px 15px;
        }
        .auth-container h2 {
            font-size: 1.5rem;
        }
    }
</style>

<script> 
    const form = document.getElementById('formForgotPass');
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const emailInput = document.getElementById('email');
        const email = emailInput.value.trim();
        if (email === "") {
            e.preventDefault();
            alert("Por favor, ingresá un correo.");
            return;
        }

        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            e.preventDefault();
            alert("Ingresá un correo válido.");
            return;
        }

        try {
            const res = await fetch('/api/mailing/forgot-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email })
            });

            const data = await res.json().catch(() => ({}));

            if (res.ok) {
                alert('Si el email existe, se envió el enlace para restablecer la contraseña.');
                form.reset();
            } else {
                alert(data.error || data.message || 'Ocurrió un error al intentar enviar el correo.');
            }
        } catch (err) {
            console.error(err);
            alert('Error de red. Intentá nuevamente más tarde.');
        }
    });
</script>