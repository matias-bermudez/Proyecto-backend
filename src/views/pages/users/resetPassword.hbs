{{> header}}
<div class="auth-container">
    <h2>Restablecer contraseña</h2>

    <p>Ingresá y confirmá tu nueva contraseña.</p>

    <form action="/api/mailing/reset-password" method="POST">
        <input type="hidden" name="token" value="{{token}}">

        <div class="form-row">
            <label>Nueva contraseña</label>
            <input type="password" name="password" required>
        </div>

        <div class="form-row">
            <label>Repetir contraseña</label>
            <input type="password" name="password2" required>
        </div>

        <button class="auth-submit-btn" type="submit">Cambiar contraseña</button>
    </form>

    <a href="/users/login" class="back-link">Volver al login</a>
</div>
{{> footer}}
<style>
    /* Contenedor general centrado */
    .auth-container {
        max-width: 420px;
        margin: 60px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.06);
        animation: fadeIn 0.7s ease-out;
    }

    .auth-container h2 {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #0d6efd;
        text-align: center;
    }

    .auth-container p {
        text-align: center;
        margin-bottom: 25px;
        color: #555;
        font-size: 0.95rem;
    }

    /* Inputs */
    .form-row {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .form-row label {
        font-size: 0.9rem;
        color: #333;
        font-weight: 500;
    }

    .form-row input {
        padding: 12px;
        border: 1px solid #d0d7e2;
        background: #fdfdfd;
        border-radius: 10px;
        font-size: 1rem;
        outline: none;
        transition: all 0.2s ease;
    }

    .form-row input:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 3px rgba(13,110,253,0.12);
    }

    /* Botones */
    .btn.primary,
    .auth-submit-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 10px;
        background: #0d6efd;
        color: #fff;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.25s ease, transform 0.1s ease;
    }

    .btn.primary:hover,
    .auth-submit-btn:hover {
        background: #0b5ed7;
    }

    .btn.primary:active,
    .auth-submit-btn:active {
        transform: scale(0.98);
    }

    /* Link volver */
    .back-link {
        display: block;
        margin-top: 18px;
        text-align: center;
        color: #0d6efd;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .back-link:hover {
        color: #0b5ed7;
        text-decoration: underline;
    }

    /* Animación */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 480px) {
        .auth-container {
            padding: 20px;
            margin: 40px 15px;
        }
        .auth-container h2 {
            font-size: 1.5rem;
        }
    }
</style>
