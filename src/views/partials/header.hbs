<header>
    <nav class="navbar">
        <a href="/" class="logo">MiTienda</a>
        <ul class="nav-links">
            <li><a href="/products">Productos</a></li>
            <li><a href="/realtimeproducts">Productos LIVE</a></li>
            <li><a href="/carts">Carrito</a></li>
            {{#if user}}
                <li><a href="/users/profile">Hola, <strong>{{user.first_name}}</strong></a></li>
                <li>
                    <form action="/users/logout" method="POST" style="display:inline">
                        <button type="submit">Salir</button>
                    </form>
                </li>
            {{else}}
                <li><a href="/users/login">Ingresar</a></li>
            {{/if}}
        </ul>
    </nav>
</header>

<style>
header {
    background: #0d6efd; 
    color: #fff;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    width: 100%;
    display: flex;
    align-items: center;
}

.navbar {
    width: 90%;
    margin: 0 auto;
    padding: 12px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 22px;
    font-weight: bold;
    color: #fff;
    text-decoration: none;
    letter-spacing: 1px;
    transition: opacity .2s;
}

.logo:hover {
    opacity: 0.8;
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 20px;
    margin: 0;
    padding: 0;
}

.nav-links li a,
.nav-links li form button {
    color: #fff;
    text-decoration: none;
    font-size: 15px;
    transition: color .2s, border-bottom .2s;
    padding: 4px 6px;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
}

.nav-links li form button:hover,
.nav-links li a:hover {
    opacity: 0.8;
}

@media (max-width: 700px) {
    .nav-links {
        flex-direction: column;
        gap: 12px;
        position: absolute;
        top: 100%;
        right: 0;
        background: #0d6efd;
        padding: 16px;
        display: none;
        width: 200px;
    }

    .navbar.active .nav-links {
        display: flex;
    }
}
</style>
